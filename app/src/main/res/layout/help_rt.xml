<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="410sp"
            android:layout_height="60sp"
            android:padding="1sp"
            android:paddingTop="1sp"
            android:paddingLeft="1sp"
            android:paddingBottom="1sp"
            android:paddingRight="1sp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/navbarbg" />

        <ImageButton
            android:id="@+id/pna_RT"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="55sp"
            android:layout_marginEnd="321sp"
            android:layout_marginBottom="6sp"
            android:background="@color/white"
            android:src="@drawable/outline_article_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/map_RT"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="100sp"
            android:layout_marginEnd="187sp"
            android:layout_marginBottom="6sp"
            android:background="@color/white"
            android:src="@drawable/baseline_map_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/dashboard_RT"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="200sp"
            android:layout_marginEnd="110sp"
            android:layout_marginBottom="6sp"
            android:background="@color/white"
            android:src="@drawable/baseline_call_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/help_RT"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="319sp"
            android:layout_marginEnd="57sp"
            android:layout_marginBottom="6sp"
            android:background="@color/white"
            android:src="@drawable/baseline_emergency_share_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="191sp"
            android:layout_height="160sp"
            android:layout_marginStart="101dp"
            android:layout_marginTop="209dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="313dp"
            android:background="@drawable/border"
            android:backgroundTint="#EF5A5A"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/baseline_sos_24" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="356sp"
            android:layout_height="78sp"
            android:layout_marginStart="28sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rectangle" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62sp"
            android:layout_marginTop="47sp"
            android:layout_marginEnd="63sp"
            android:fontFamily="@font/roboto_bold"
            android:text="Press the button to call for help"
            android:textColor="#F2FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- PWD, Sick, Pregnant checkboxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/pwd_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PWD"
                    android:layout_marginEnd="16dp" />

                <CheckBox
                    android:id="@+id/sick_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sick"
                    android:layout_marginEnd="16dp" />

                <CheckBox
                    android:id="@+id/pregnant_checkbox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pregnant" />

            </LinearLayout>

            <!-- PWD dropdown -->
            <LinearLayout
                android:id="@+id/pwd_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/hearing_impairment_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hearing Impairment" />

                <CheckBox
                    android:id="@+id/vision_impairment_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vision Impairment" />

                <!-- Add more checkboxes for other PWD options -->

            </LinearLayout>

            <!-- Sick dropdown -->
            <LinearLayout
                android:id="@+id/sick_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/diabetes_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diabetes" />

                <CheckBox
                    android:id="@+id/heart_problems_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Problems" />

                <!-- Add more checkboxes for other sick options -->

                <EditText
                    android:id="@+id/other_sick_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other" />

            </LinearLayout>

            <!-- Pregnant dropdown -->
            <RadioGroup
                android:id="@+id/pregnant_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/first_trimester_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Trimester" />

                <RadioButton
                    android:id="@+id/second_trimester_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd Trimester" />

                <RadioButton
                    android:id="@+id/third_trimester_radiobutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd Trimester" />

            </RadioGroup>

        </LinearLayout>

