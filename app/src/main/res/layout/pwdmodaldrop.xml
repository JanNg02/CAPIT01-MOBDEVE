<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <CheckBox
        android:id="@+id/hearing_impairment_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hearing Impairment" />

    <CheckBox
        android:id="@+id/vision_impairment_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vision Impairment" />

    <CheckBox
        android:id="@+id/mental_disability_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mental Disability" />

    <CheckBox
        android:id="@+id/mobility_disability_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobility Disability" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />
</LinearLayout>